{
    "dockerFile": "Dockerfile",
    "postStartCommand": "cp .devcontainer/vimrc ~/.vimrc && vim +PluginInstall +qall && cp -r * ~/.vim/bundle/copilot-chat.vim/",
    "customizations": {
        "vscode": {
            "extensions": [
                "XadillaX.viml"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "[viml]": {
                    "editor.tabSize": 2
                }
            }
        }
    }
}